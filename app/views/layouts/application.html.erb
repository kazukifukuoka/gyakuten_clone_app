<!DOCTYPE html>
<html>
  <head>
    <title>GyakutenCloneGroup11</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <%= link_to "Gyakuten", "#", class: 'navbar-brand'%>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav w-100 mr-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Rails
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "動画教材", "/movies", class: 'dropdown-item' %>
            <%= link_to "テキスト教材", "#", class: 'dropdown-item' %>
            <%= link_to "ライブコーディング", "#", class: 'dropdown-item' %>
            <%= link_to "質問集", "#", class: 'dropdown-item' %>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to "AWS講座", "#", class: 'nav-link'%>
        </li>
        <li class="nav-item">
          <%= link_to "PHP講座", "#", class: 'nav-link'%>
        </li>
        <li class="nav-item">
          <%= link_to "対談", "#", class: 'nav-link'%>
        </li>
        <li class="nav-item">
          <%= link_to "情報発信", "#", class: 'nav-link'%>
        </li>
        <li class="nav-item">
          <%= link_to "動画編集講座", "#", class: 'nav-link'%>
        </li>
        <li class="nav-item">
          <%= link_to "ライティング講座", "#", class: 'nav-link'%>
        </li>
        <li class="nav-item">
          <%= link_to "LINE@", "#", class: 'nav-link'%>
        </li>
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
        <% else%>
        <li class="nav-item">
          <%= link_to "ログイン", new_user_session_path, class: 'post nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "新規登録", new_user_registration_path, class: 'post nav-link' %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
  </nav>

    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
